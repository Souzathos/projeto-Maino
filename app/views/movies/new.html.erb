<div class="max-w-3xl mx-auto mt-12 bg-gray-900 border border-gray-800 p-10 rounded-3xl shadow-2xl">
  <h1 class="text-3xl font-bold text-yellow-400 mb-10 flex items-center gap-3">
    ðŸŽ¬ Novo Filme
  </h1>

  <%= form_with(model: @movie, local: true, class: "space-y-8") do |form| %>

    <!-- Campo TÃ­tulo -->
    <div class="flex flex-col gap-2">
      <%= form.label :title, "TÃ­tulo", class: "text-sm font-semibold text-gray-300" %>
      <%= form.text_field :title, class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all duration-200 shadow-sm" %>
    </div>

    <!-- Campo Sinopse -->
    <div class="flex flex-col gap-2">
      <%= form.label :synopsis, "Sinopse", class: "text-sm font-semibold text-gray-300" %>
      <%= form.text_area :synopsis, rows: 4, class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all duration-200 shadow-sm resize-none" %>
    </div>

    <!-- Campos Ano, DuraÃ§Ã£o, Diretor, Categoria -->
    <div class="grid md:grid-cols-4 gap-6">
      <div class="flex flex-col gap-2">
        <%= form.label :year, "Ano de lanÃ§amento", class: "text-sm font-semibold text-gray-300" %>
        <%= form.number_field :year, class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all duration-200 shadow-sm" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :duration, "DuraÃ§Ã£o (min)", class: "text-sm font-semibold text-gray-300" %>
        <%= form.number_field :duration, class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all duration-200 shadow-sm" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= form.label :director, "Diretor", class: "text-sm font-semibold text-gray-300" %>
        <%= form.text_field :director, class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all duration-200 shadow-sm" %>
      </div>
    </div>

    <div class="flex flex-col py-2 gap-2">
      <%= form.label :category_names, "Categorias (separe por vÃ­rgula)", class: "text-sm font-semibold text-gray-300" %>
      <%= form.text_field :category_names, value: @movie.categories.map(&:name).join(", "), class: "input w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition-all duration-200 shadow-sm" %>
    </div>

    <!-- Campo Poster -->
    <div class="flex flex-col gap-2">
      <%= form.label :poster, "PÃ´ster do Filme", class: "text-sm font-semibold text-gray-300" %>
      <%= form.file_field :poster,
            accept: "image/*",
            class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3
                    text-gray-300 file:bg-gray-700 file:border-none file:px-4
                    file:py-2 file:rounded-lg file:text-yellow-400
                    focus:outline-none focus:ring-2 focus:ring-yellow-400
                    shadow-sm cursor-pointer" %>
      <div id="poster-preview" class="mt-3 hidden">
        <img id="preview-img" class="w-40 h-56 object-cover rounded-lg border border-gray-700">
      </div>

      <script>
      document.addEventListener("DOMContentLoaded", () => {
        const input = document.querySelector('input[type="file"][name="movie[poster]"]');

        if (!input) return;

        input.addEventListener("change", () => {
          const file = input.files[0];
          if (!file) return;

          const preview = document.getElementById("poster-preview");
          const img = document.getElementById("preview-img");
          
          img.src = URL.createObjectURL(file);
          preview.classList.remove("hidden");
        });
      });
      </script>

    </div>

    <!-- BotÃ£o -->
    <div class="pt-8 flex justify-end py-4">
      <%= form.submit "Salvar Filme", class: "bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-semibold py-3 px-8 rounded-lg shadow-md transition-all duration-200 hover:scale-105" %>
    </div>

  <% end %>
</div>
