<h1 class="text-3xl font-extrabold text-yellow-400 mb-8 flex items-center gap-2">
  üéûÔ∏è Cat√°logo de Filmes
</h1>

<% if user_signed_in? %>
  <%= link_to "‚ûï Novo Filme",
    new_movie_path,
    class: "inline-block mb-8 bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-2 px-5 rounded-lg shadow transition" %>
<% end %>

<!-- FORM DE IMPORTA√á√ÉO CSV -->
<div class="mb-6 flex items-center gap-2 py-2">
  <%= form_with url: import_movies_path, multipart: true, local: true, class: "flex items-center gap-3" do |f| %>
    <%= f.file_field :file, accept: ".csv",
        class: "bg-gray-800 text-gray-200 border border-gray-700 px-3 py-2 rounded" %>
    <%= f.submit "Importar CSV",
        class: "bg-yellow-500 hover:bg-yellow-400 text-black px-4 py-2 rounded shadow" %>
  <% end %>
</div>

<!-- LISTA DE FILMES -->
<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-auto">
  <% @movies.each do |movie| %>
    <div class="bg-gray-800 hover:bg-gray-700 transition border border-gray-700 rounded-xl p-5 shadow-lg flex flex-col">

      <% if movie.poster.attached? %>
        <%= image_tag movie.poster, class: "w-full h-44 object-cover rounded-md mb-3 shadow-md" %>
      <% else %>
        <%= image_tag "placeholder.png", class: "w-full h-44 object-cover rounded-md mb-3 opacity-70" %>
      <% end %>

      <h3 class="text-lg font-bold text-white mb-1">
        <%= link_to movie.title, movie_path(movie), class: "hover:text-yellow-400 transition" %>
      </h3>

      <p class="text-yellow-400 text-sm font-bold mb-1">
        ‚≠ê <%= movie.average_rating %> (<%= movie.reviews.count %>)
      </p>

      <p class="text-sm text-gray-400 mb-1">
        <strong>Ano:</strong> <%= movie.year %> |
        <strong>Dura√ß√£o:</strong> <%= movie.duration %> min
      </p>

      <p class="text-sm text-gray-400 mb-1">
        <strong>Diretor:</strong> <%= movie.director %>
      </p>

      <p class="text-sm text-gray-400 leading-relaxed mb-2">
        <%= truncate(movie.synopsis, length: 120) %>
      </p>

      <p class="text-sm text-gray-400 mb-3">
        <strong>Categorias:</strong>
        <% if movie.categories.any? %>
          <% movie.categories.each do |c| %>
            <span class="bg-indigo-600 text-white text-xs px-2 py-1 rounded-md mr-1"><%= c.name %></span>
          <% end %>
        <% else %>
          Nenhuma
        <% end %>
      </p>

      <p class="text-xs text-gray-400 mb-2">
        <% movie.tags.each do |t| %>
          <span class="bg-orange-600 text-white text-[10px] px-1.5 py-0.5 rounded mr-1">#<%= t.name %></span>
        <% end %>
      </p>

      <%= link_to "Ver Detalhes", movie_path(movie),
          class: "mt-auto bg-yellow-600 hover:bg-yellow-500 text-gray-900 font-bold py-2 px-4 rounded-md text-center transition" %>

    </div>
  <% end %>
</div>

<div class="pagination mt-10">
  <%= paginate @movies %>
</div>
