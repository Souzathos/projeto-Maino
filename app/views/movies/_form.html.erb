<%= form_with(model: movie, local: true, multipart: true, data: { turbo: false }) do |f| %>
  
  <% if movie.errors.any? %>
    <div class="form-errors">
      <strong><%= pluralize(movie.errors.count, "erro") %> impediram salvar:</strong>
      <ul>
        <% movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Título" %>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :synopsis, "Sinopse" %>
    <%= f.text_area :synopsis %>
  </div>

  <div>
    <%= f.label :year, "Ano de lançamento" %>
    <%= f.number_field :year, required: true, min: 1888 %>
  </div>

  <div>
    <%= f.label :duration, "Duração (min)" %>
    <%= f.number_field :duration, required: true, min: 1 %>
  </div>

  <div>
    <%= f.label :director, "Diretor" %>
    <%= f.text_field :director, required: true %>
  </div>

  <div class="form-group mt-4">
    <%= f.label :category_names, "Categorias (separe por vírgula)", class: "text-gray-300 font-semibold" %>
    <%= f.text_field :category_names, value: @movie.categories.map(&:name).join(", "), class: "input" %>
  </div>

  <div class="form-group mb-4">
    <%= f.label :poster, "Poster do Filme" %><br>
    <%= f.file_field :poster,
      class: "mt-1 px-4 py-2 rounded bg-gray-800 text-white border border-gray-700" %>
  </div>

  <%= f.submit "Salvar Filme" %>
<% end %>
