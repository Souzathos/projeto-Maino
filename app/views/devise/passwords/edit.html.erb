<div class="max-w-lg mx-auto bg-gray-900 p-8 mt-20 rounded-lg shadow-lg border border-gray-700">
  <h2 class="text-2xl font-bold text-white mb-6 text-center">Alterar senha 🔐</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-5">
      <%= f.label :password, "Nova senha (mín. 6 caracteres)", class: "text-gray-300 font-medium" %>
      <%= f.password_field :password, autocomplete: "new-password",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <div class="mb-6 py-2">
      <%= f.label :password_confirmation, "Confirmar nova senha", class: "text-gray-300 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <%= f.submit "Atualizar senha",
          class: "w-full bg-yellow-500 hover:bg-yellow-600 text-black font-bold p-3 rounded-lg transition cursor-pointer" %>
  <% end %>

  <div class="text-center mt-6 space-y-2">
    <%= link_to "Fazer login", new_session_path(resource_name),
          class: "text-yellow-400 hover:text-yellow-300 font-medium" %>

    <p class="text-gray-400 text-sm">
      Não tem conta?
      <%= link_to "Cadastrar", new_registration_path(resource_name),
            class: "text-yellow-400 hover:text-yellow-300 font-semibold" %>
    </p>
  </div>
</div>
