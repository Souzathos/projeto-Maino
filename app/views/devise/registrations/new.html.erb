<div class="max-w-lg mx-auto bg-gray-900 p-8 mt-20 rounded-lg shadow-lg border border-gray-700">
  <h2 class="text-2xl font-bold text-white mb-6 text-center">Criar Conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="mb-5">
      <%= f.label :name, "Nome completo", class: "text-gray-300 font-medium" %>
      <%= f.text_field :name, autofocus: true,
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <div class="mb-5 py-2">
      <%= f.label :email, "Email", class: "text-gray-300 font-medium" %>
      <%= f.email_field :email, autocomplete: "email",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <div class="mb-5 py-2">
      <%= f.label :password, "Senha", class: "text-gray-300 font-medium" %>
      <%= f.password_field :password, autocomplete: "new-password",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mt-1">
          <%= @minimum_password_length %> caracteres no mínimo
        </p>
      <% end %>
    </div>

    <div class="mb-5">
      <%= f.label :password_confirmation, "Confirmar senha", class: "text-gray-300 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <%= f.submit "Criar Conta",
          class: "w-full bg-yellow-500 hover:bg-yellow-600 text-black font-bold p-3 rounded-lg transition" %>
  <% end %>

  <div class="text-center mt-6">
    <p class="text-gray-400 text-sm">
      Já tem conta?
      <%= link_to "Entrar", new_session_path(resource_name),
            class: "text-yellow-400 hover:text-yellow-300 font-semibold" %>
    </p>
  </div>

</div>
