<div class="max-w-xl mx-auto bg-gray-900 p-8 mt-16 rounded-lg shadow-lg border border-gray-700">
  <h2 class="text-2xl font-bold text-white mb-6 text-center"> Editar Perfil </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f| %>
    <div class="mb-5">
      <%= f.label :email, "Email", class: "text-gray-300 font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <div class="mb-6">
      <label class="font-bold text-gray-400 text-sm italic">
        Nova senha (deixe em branco para n√£o alterar)
      </label>
      <%= f.password_field :password, autocomplete: "new-password",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mt-1">
          <%= @minimum_password_length %> caracteres no m√≠nimo
        </p>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "Confirmar Senha", class: "text-gray-300 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <div class="mb-8 py-2">
      <%= f.label :current_password, "Senha Atual", class: "text-gray-300 font-medium" %>
      <%= f.password_field :current_password, autocomplete: "current-password",
            class: "mt-2 w-full bg-gray-800 text-white border border-gray-700 rounded p-3 focus:ring focus:ring-yellow-500" %>
    </div>

    <%= f.submit "Salvar Altera√ß√µes",
          class: "w-full bg-yellow-500 hover:bg-yellow-600 text-black font-bold p-3 rounded-lg mb-6 transition" %>
  <% end %>

  <hr class="border-gray-700 my-6">

  <div class="text-center">
    <%= button_to "Cancelar minha conta ‚ùå",
          registration_path(resource_name),
          method: :delete,
          data: { confirm: "Tem certeza que deseja excluir sua conta? üò¢" },
          class: "text-red-500 hover:text-red-400 font-semibold mb-6" %>

    <%= link_to "‚¨Ö Voltar", :back, class: "text-gray-400 hover:text-white transition text-sm" %>
  </div>
</div>
